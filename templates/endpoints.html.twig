                    <span class="badge-token">üîí {{ endpoint.acceso }}</span>
                {% else %}
                    <span class="badge-public">üåê {{ endpoint.acceso }}</span>
                {% endif %}
            </div>
            <div class="endpoint-description">{{ endpoint.descripcion }}</div>
        </div>
        {% endfor %}
    </div>
</div>

<!-- Modal para detalles completos -->
{% for endpoint in endpoints %}
<div class="full-endpoint-details" id="modal{{ endpoint.id }}">
    <div class="details-modal">
        <button class="close-modal" onclick="closeModal({{ endpoint.id }})">&times;</button>
        
        <h2>{{ endpoint.nombre }}</h2>
        
        <div class="detail-section">
            <h3>Informaci√≥n General</h3>
            <p>
                <strong>M√©todo HTTP:</strong> 
                <span class="method-badge method-{% if '/' in endpoint.metodo %}mixed{% else %}{{ endpoint.metodo|lower }}{% endif %}">
                    {{ endpoint.metodo }}
                </span>
            </p>
            <p>
                <strong>Acceso:</strong>
                {% if 'Token' in endpoint.acceso %}
                    <span class="badge-token">üîí {{ endpoint.acceso }}</span>
                {% else %}
                    <span class="badge-public">üåê {{ endpoint.acceso }}</span>
                {% endif %}
            </p>
        </div>
        
        <div class="detail-section">
            <h3>Descripci√≥n</h3>
            <p>{{ endpoint.descripcion }}</p>
        </div>
        
        {% if endpoint.params is defined and endpoint.params %}
        <div class="detail-section">
            <h3>Par√°metros</h3>
            {% if endpoint.url_completa_ejemplo is defined %}
            <p><strong>URL Completa (Ejemplo):</strong></p>
            <div class="code-block">{{ endpoint.url_completa_ejemplo }}</div>
            {% endif %}
            {% if endpoint.parametros_ejemplo is defined %}
            <p><strong>Par√°metros:</strong></p>
            <div class="code-block">{{ endpoint.parametros_ejemplo }}</div>
            {% endif %}
        </div>
        {% endif %}
        
        <div class="detail-section">
            <h3>Ejemplo de Solicitud (Request)</h3>
            <div class="code-block">{{ endpoint.request }}</div>
        </div>
        
        <div class="detail-section">
            <h3>Ejemplo de Respuesta Exitosa</h3>
            <div class="code-block">{{ endpoint.response }}</div>
        </div>
        
        <div class="detail-section">
            <h3>Autenticaci√≥n Requerida</h3>
            <p>
                <strong>Headers recomendados:</strong>
            </p>
            <div class="code-block">X-API-Key: APP123456789
Authorization: Bearer &lt;token_jwt&gt;
Content-Type: application/json</div>
        </div>
        
        <!-- PROBADOR DE ENDPOINTS -->
        <div class="tester-section">
            <h3>üß™ Probar Endpoint</h3>
            
            <div class="tester-form">
                {% if 'Token' in endpoint.acceso %}
                <div class="form-group">
                    <label>üîë Token JWT (obtenido en login)</label>
                    <input type="text" data-endpoint-id="{{ endpoint.id }}" data-type="token" placeholder="Ej: eyJhbGciOiJIUzI1NiIs..." />
                </div>
                {% endif %}
                
                {% if endpoint.params is defined and endpoint.params %}
                    {% for param in endpoint.params %}
                    <div class="form-group">
                        <label>üîó Par√°metro: <strong>{{ param }}</strong></label>
                        <input type="text" data-endpoint-id="{{ endpoint.id }}" data-type="param" data-param="{{ param }}" placeholder="Ingresa {{ param }}" />
                    </div>
                    {% endfor %}
                {% endif %}
                
                {% if endpoint.necesita_body %}
                <div class="form-group">
                    <label>üì§ Body (JSON)</label>
                    <textarea data-endpoint-id="{{ endpoint.id }}" data-type="body" data-example="{{ endpoint.request|escape('html_attr') }}"></textarea>
                </div>
                {% endif %}
                
                <div class="tester-buttons">
                    <button class="btn-test" onclick="testEndpoint('{{ endpoint.id }}', '{{ endpoint.metodo }}', '{{ endpoint.nombre }}')">
                        ‚ñ∂ Enviar Solicitud
                    </button>
                    <button class="btn-clear" onclick="clearTester('{{ endpoint.id }}')">
                        üóëÔ∏è Limpiar
                    </button>
                </div>
                
                <div class="tester-response" id="response-{{ endpoint.id }}">
                    <div class="response-status" id="status-{{ endpoint.id }}"></div>
                    <div class="response-body" id="body-{{ endpoint.id }}"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endfor %}

<script>
    function showDetails(endpointId) {
        document.getElementById('modal' + endpointId).classList.add('active');
        
        // Poblar los textareas con los ejemplos cuando se abre el modal
        const textareas = document.querySelectorAll('textarea[data-type="body"]');
        textareas.forEach(textarea => {
            const example = textarea.getAttribute('data-example');
            if (example && !textarea.value) {
                textarea.value = example;
            }
        });
    }
    
    function closeModal(endpointId) {
        document.getElementById('modal' + endpointId).classList.remove('active');
    }
    
    function filterEndpoints() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const cards = document.querySelectorAll('.endpoint-card');
        
        cards.forEach(card => {
            const text = card.textContent.toLowerCase();
            if (text.includes(searchTerm)) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }
    
    document.getElementById('searchInput').addEventListener('keyup', filterEndpoints);
    
    // Cerrar modal al hacer click fuera
    document.querySelectorAll('.full-endpoint-details').forEach(modal => {
        modal.addEventListener('click', function(e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        });
    });
    
    // ===== FUNCIONES PARA PROBADOR DE ENDPOINTS =====
    
    // Mapeo de endpoints a sus URLs
    const endpointUrls = {
        1: '/api/login',
        2: '/api/usuarios',
        '2_1': '/api/usuarios/perfil',
        '2_2': '/api/usuarios/{id}',
        '2_3': '/api/usuarios/{id}',
        '2_4': '/api/usuarios/{id}',
        3: '/api/home',
        4: '/api/general',
        5: '/api/privado',
        6: '/api/mensaje',
        7: '/api/privado/salir',
        8: '/api/privado/cambiar-chat',
        9: '/api/invitar',
        10: '/api/usuarios/perfil',
        '10_1': '/api/usuarios/9',
        11: '/api/actualizar',
        '11_1': '/api/actualizar',
        12: '/api/logout',
        13: '/api/admin/usuarios',
        14: '/api/admin/usuarios/{id}/bloqueos',
        15: '/api/admin/usuarios/{id}/bloquear',
        16: '/api/admin/usuarios/{id}/desbloquear/{bloqueado_id}',
        17: '/api/admin/chats',
        18: '/api/admin/chats/{id}/miembros',
        19: '/api/admin/chats/{id}/miembros/{usuario_id}',
        20: '/api/admin/chats/{id}',
    };
    
    async function testEndpoint(endpointId, method, name) {
        let url = endpointUrls[endpointId];
        const bodyInput = document.querySelector('textarea[data-endpoint-id="' + endpointId + '"][data-type="body"]');
        const tokenInput = document.querySelector('input[data-endpoint-id="' + endpointId + '"][data-type="token"]');
        const responseDiv = document.getElementById('response-' + endpointId);
        const statusDiv = document.getElementById('status-' + endpointId);
        const bodyDiv = document.getElementById('body-' + endpointId);
        
        if (!url) {
            statusDiv.textContent = '‚ùå Error: URL no configurada para este endpoint';
            statusDiv.className = 'response-status error';
            responseDiv.classList.add('show');
            return;
        }
        
        // Reemplazar par√°metros din√°micos en la URL {id}, {usuario_id}, etc.
        const paramInputs = document.querySelectorAll('input[data-endpoint-id="' + endpointId + '"][data-type="param"]');
        paramInputs.forEach(input => {
            const paramName = input.getAttribute('data-param');
            const paramValue = input.value.trim();
            if (paramValue) {
                url = url.replace('{' + paramName + '}', paramValue);
            }
        });
        
        // Verificar si quedan par√°metros sin reemplazar
        if (/{.*?}/.test(url)) {
            statusDiv.innerHTML = '‚ùå Error: Faltan par√°metros en la URL';
            statusDiv.className = 'response-status error';
            responseDiv.classList.add('show');
            return;
        }
        
        const button = event.target;
        button.disabled = true;
        button.innerHTML = '<span class="loading-spinner"></span>Enviando...';
        
        try {
            const headers = {
                'Content-Type': 'application/json'
            };
            
            // Agregar token si est√° disponible
            if (tokenInput && tokenInput.value.trim()) {
                const token = tokenInput.value.trim();
                headers['Authorization'] = 'Bearer ' + token;
            }
            
            const options = {
                method: method.split('/')[0] || 'GET',
                headers: headers
            };
            
            // Agregar body si existe y si no es GET
            if (bodyInput && bodyInput.value.trim() && options.method !== 'GET') {
                try {
                    const body = JSON.parse(bodyInput.value);
                    options.body = JSON.stringify(body);
                } catch (e) {
                    throw new Error('JSON inv√°lido en el body: ' + e.message);
                }
            }
            
            console.log('Haciendo request:', {
                url: url,
                ...options
            });
            
            const response = await fetch(url, options);
            
            let data;
            let responseText = '';
            try {
                responseText = await response.text();
                data = responseText ? JSON.parse(responseText) : { success: false, message: 'Respuesta vac√≠a' };
            } catch (e) {
                data = { success: false, message: 'Error parsando JSON: ' + e.message, response_text: responseText.substring(0, 200) };
            }
            
            // Mostrar respuesta
            const statusCode = response.status;
            const isSuccess = response.ok;
            
            statusDiv.innerHTML = `<strong>${isSuccess ? '‚úÖ' : '‚ùå'} Status: ${statusCode}</strong> - ${name}`;
            statusDiv.className = 'response-status ' + (isSuccess ? 'success' : 'error');
            bodyDiv.textContent = JSON.stringify(data, null, 2);
            responseDiv.classList.add('show');
            
        } catch (error) {
            console.error('Error:', error);
            statusDiv.innerHTML = `‚ùå <strong>Error de conexi√≥n:</strong> ${error.message}`;
            statusDiv.className = 'response-status error';
            bodyDiv.textContent = 'Revisa la consola del navegador (F12) para m√°s detalles.';
            responseDiv.classList.add('show');
        } finally {
            button.disabled = false;
            button.innerHTML = '‚ñ∂ Enviar Solicitud';
        }
    }
    
    function clearTester(endpointId) {
        const bodyInput = document.querySelector('textarea[data-endpoint-id="' + endpointId + '"][data-type="body"]');
        const tokenInput = document.querySelector('input[data-endpoint-id="' + endpointId + '"][data-type="token"]');
        const paramInputs = document.querySelectorAll('input[data-endpoint-id="' + endpointId + '"][data-type="param"]');
        const responseDiv = document.getElementById('response-' + endpointId);
        
        if (bodyInput) bodyInput.value = '';
        if (tokenInput) tokenInput.value = '';
        paramInputs.forEach(input => input.value = '');
        responseDiv.classList.remove('show');
    }
</script>
{% endblock %}
