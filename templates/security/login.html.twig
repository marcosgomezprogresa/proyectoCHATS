{% extends 'base.html.twig' %}

{% block title %}Chats - Login{% endblock %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .login-container {
        background: white;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
        padding: 40px;
        position: relative;
    }
    
    .endpoints-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #667eea;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 12px;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s;
    }
    
    .endpoints-btn:hover {
        background: #764ba2;
        text-decoration: none;
        color: white;
    }
    
    .login-title {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
        font-size: 24px;
        font-weight: 600;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #555;
        font-weight: 500;
        font-size: 14px;
    }
    
    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        transition: border-color 0.3s;
    }
    
    .form-group input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    
    .submit-btn {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s;
    }
    
    .submit-btn:hover {
        transform: translateY(-2px);
    }
    
    .alert {
        padding: 12px;
        border-radius: 5px;
        margin-bottom: 20px;
        font-size: 14px;
    }
    
    .alert-danger {
        background: #fee;
        color: #c33;
        border: 1px solid #fcc;
    }
    
    .auth-info {
        background: #eef;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        font-size: 13px;
        color: #555;
    }
</style>

<div class="login-container">
    <a href="{{ path('app_endpoints') }}" class="endpoints-btn">üìö Ver Endpoints</a>
    
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="auth-info">
            Est√°s conectado como <strong>{{ app.user.userIdentifier }}</strong> 
            <a href="{{ logout_path() }}" style="color: #667eea;">Cerrar sesi√≥n</a>
        </div>
    {% endif %}

    <h1 class="login-title">üîê Chats</h1>
    
    <form method="post">
        <div class="form-group">
            <label for="username">Email o Usuario</label>
            <input 
                type="text" 
                value="{{ last_username }}" 
                name="_username" 
                id="username" 
                autocomplete="email"
                placeholder="tu@email.com o nombre_usuario"
                required 
                autofocus
            >
        </div>
        
        <div class="form-group">
            <label for="password">Contrase√±a</label>
            <input 
                type="password" 
                name="_password" 
                id="password" 
                autocomplete="current-password"
                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                required
            >
        </div>
        
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
        
        <button class="submit-btn" type="submit">
            Iniciar Sesi√≥n
        </button>
    </form>
</div>
{% endblock %}
