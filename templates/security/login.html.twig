{% extends 'base.html.twig' %}

{% block title %}Chats - Login{% endblock %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }
    
    .auth-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 400px;
        padding: 50px 40px;
        position: relative;
    }
    
    .auth-logo {
        text-align: center;
        margin-bottom: 30px;
        font-size: 40px;
    }
    
    .auth-title {
        text-align: center;
        color: #333;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 10px;
    }
    
    .auth-subtitle {
        text-align: center;
        color: #999;
        font-size: 14px;
        margin-bottom: 30px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-weight: 500;
        font-size: 14px;
    }
    
    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        transition: border-color 0.3s;
    }
    
    .form-group input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    
    .btn-submit {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        margin-top: 10px;
    }
    
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(102, 126, 234, 0.3);
    }
    
    .btn-submit:active {
        transform: translateY(0);
    }
    
    .btn-submit:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        transform: none;
    }
    
    .auth-link {
        text-align: center;
        margin-top: 20px;
        color: #999;
        font-size: 14px;
    }
    
    .auth-link a {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
    }
    
    .auth-link a:hover {
        color: #764ba2;
    }
    
    .alert {
        padding: 12px 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
        display: none;
    }
    
    .alert.show {
        display: block;
    }
    
    .alert-error {
        background: #fee;
        color: #c00;
        border: 1px solid #fcc;
    }
    
    .alert-success {
        background: #efe;
        color: #060;
        border: 1px solid #cfc;
    }
    
    .loading {
        display: none;
        text-align: center;
        margin: 10px 0;
        color: #667eea;
    }
    
    .spinner {
        border: 3px solid #f3f3f3;
        border-top: 3px solid #667eea;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        animation: spin 1s linear infinite;
        display: inline-block;
        margin-right: 8px;
    }
    
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    .endpoints-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #667eea;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 12px;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s;
    }
    
    .endpoints-btn:hover {
        background: #764ba2;
        text-decoration: none;
        color: white;
    }
</style>

<div class="auth-container">
    <a href="{{ url('app_endpoints') }}" class="endpoints-btn">ðŸ“‹ API Docs</a>
    
    <div class="auth-logo">ðŸ’¬</div>
    <h1 class="auth-title">Iniciar SesiÃ³n</h1>
    <p class="auth-subtitle">Bienvenido de vuelta</p>
    
    <div id="alert" class="alert"></div>
    
    <form id="loginForm">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="tu@email.com" required>
        </div>
        
        <div class="form-group">
            <label for="password">ContraseÃ±a</label>
            <input type="password" id="password" name="password" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" required>
        </div>
        
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <span>Iniciando sesiÃ³n...</span>
        </div>
        
        <button type="submit" class="btn-submit" id="submitBtn">Iniciar SesiÃ³n</button>
    </form>
    
    <p class="auth-link">
        Â¿No tienes cuenta? <a href="{{ url('app_register') }}">RegÃ­strate aquÃ­</a>
    </p>
</div>

<script>
    const loginForm = document.getElementById('loginForm');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const submitBtn = document.getElementById('submitBtn');
    const loadingDiv = document.getElementById('loading');
    const alertDiv = document.getElementById('alert');
    
    // Restaurar email si existe en localStorage
    window.addEventListener('load', () => {
        const savedEmail = localStorage.getItem('lastEmail');
        if (savedEmail) {
            emailInput.value = savedEmail;
        }
    });
    
    loginForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const email = emailInput.value.trim();
        const password = passwordInput.value;
        
        // Validaciones
        if (!email || !password) {
            showAlert('Por favor completa todos los campos', 'error');
            return;
        }
        
        if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
            showAlert('Por favor ingresa un email vÃ¡lido', 'error');
            return;
        }
        
        submitBtn.disabled = true;
        loadingDiv.style.display = 'block';
        alertDiv.classList.remove('show');
        
        try {
            const response = await fetch('/api/auth/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email, password })
            });
            
            let data;
            try {
                const text = await response.text();
                try {
                    data = text ? JSON.parse(text) : {};
                } catch (e) {
                    data = { success: false, message: 'Respuesta no JSON del servidor', status: response.status, body_preview: text.substring(0, 500) };
                }
            } catch (e) {
                data = { success: false, message: 'No se pudo leer la respuesta del servidor: ' + e.message };
            }

            if (data.success) {
                // Guardar datos de sesiÃ³n
                localStorage.setItem('userToken', data.data.user_token);
                localStorage.setItem('userName', data.data.user_profile.nombre);
                localStorage.setItem('userEmail', data.data.user_profile.email);
                localStorage.setItem('lastEmail', email);
                
                showAlert('Â¡Login exitoso! Redirigiendo...', 'success');
                
                // Redirigir al home usando la URL que devuelva el servidor si existe
                const redirectUrl = data?.data?.redirect_url || "{{ url('app_home') }}";
                setTimeout(() => {
                    window.location.href = redirectUrl;
                }, 1500);
            } else {
                console.warn('Login fallo. Status:', response.status, 'Body:', data);
                showAlert(data.message || ('Error en el login (status ' + response.status + ')'), 'error');
            }
        } catch (error) {
            console.error('Error connecting to API:', error);
            showAlert(error.message || 'Error al conectar con el servidor', 'error');
        } finally {
            submitBtn.disabled = false;
            loadingDiv.style.display = 'none';
        }
    });
    
    function showAlert(message, type) {
        alertDiv.textContent = message;
        alertDiv.className = `alert alert-${type} show`;
        alertDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
</script>
{% endblock %}
